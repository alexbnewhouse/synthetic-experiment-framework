# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyi text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Scripts
*.sh text eol=lf
*.bash text eol=lf

# Notebooks
*.ipynb text eol=lf

# Data files (shouldn't be committed, but if they are...)
*.csv text eol=lf
*.json text eol=lf

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.7z binary

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
